# EditorConfig is awesome: https://EditorConfig.org

# トップレベルの EditorConfig ファイルであることを示す
root = true

# すべてのファイルに適用される設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown ファイルの設定
[*.md]
trim_trailing_whitespace = false

# TypeScript/JavaScript ファイルの設定
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# Python ファイルの設定
[*.py]
indent_style = space
indent_size = 4

# JSON ファイルの設定
[*.json]
indent_style = space
indent_size = 2

# YAML ファイルの設定
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS/SCSS ファイルの設定
[*.{css,scss}]
indent_style = space
indent_size = 2

